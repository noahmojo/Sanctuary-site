<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order #<%= order.id.slice(0, 8).toUpperCase() %> - Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>* { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-neutral-50">
  <nav class="bg-white border-b border-neutral-200 px-6 py-4">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/admin" class="font-medium">ü¶ô Sanctuary Admin</a>
      <div class="flex gap-6 text-sm">
        <a href="/admin/animals" class="text-neutral-600 hover:text-neutral-900">Animals</a>
        <a href="/admin/products" class="text-neutral-600 hover:text-neutral-900">Products</a>
        <a href="/admin/orders" class="text-neutral-900 font-medium">Orders</a>
        <a href="/admin/bookings" class="text-neutral-600 hover:text-neutral-900">Bookings</a>
        <a href="/admin/subscribers" class="text-neutral-600 hover:text-neutral-900">Subscribers</a>
        <a href="/admin/settings" class="text-neutral-600 hover:text-neutral-900">Settings</a>
        <a href="/admin/logout" class="text-neutral-600 hover:text-neutral-900">Logout</a>
      </div>
    </div>
  </nav>

  <main class="max-w-4xl mx-auto px-6 py-10">
    <a href="/admin/orders" class="text-neutral-500 hover:text-neutral-700 text-sm mb-6 inline-block">‚Üê Back to Orders</a>
    
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-2xl font-light mb-1">Order #<%= order.id.slice(0, 8).toUpperCase() %></h1>
        <p class="text-neutral-500 text-sm"><%= new Date(order.createdAt).toLocaleString() %></p>
      </div>
      <% if (order.status === 'pending') { %>
        <span class="inline-block px-3 py-1.5 rounded-full text-sm bg-amber-50 text-amber-600 font-medium">Pending</span>
      <% } else if (order.status === 'shipped') { %>
        <span class="inline-block px-3 py-1.5 rounded-full text-sm bg-blue-50 text-blue-600 font-medium">Shipped</span>
      <% } else if (order.status === 'delivered') { %>
        <span class="inline-block px-3 py-1.5 rounded-full text-sm bg-emerald-50 text-emerald-600 font-medium">Delivered</span>
      <% } else if (order.status === 'cancelled') { %>
        <span class="inline-block px-3 py-1.5 rounded-full text-sm bg-red-50 text-red-600 font-medium">Cancelled</span>
      <% } else { %>
        <span class="inline-block px-3 py-1.5 rounded-full text-sm bg-neutral-100 text-neutral-600 font-medium"><%= order.status %></span>
      <% } %>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Customer Info -->
      <div class="bg-white rounded-xl border border-neutral-200 p-6">
        <h2 class="font-medium mb-4">Customer</h2>
        <p class="font-medium"><%= order.name %></p>
        <p class="text-neutral-500 text-sm"><%= order.email %></p>
      </div>
      
      <!-- Shipping Address -->
      <div class="bg-white rounded-xl border border-neutral-200 p-6">
        <h2 class="font-medium mb-4">Shipping Address</h2>
        <p><%= order.name %></p>
        <p class="text-neutral-600"><%= order.address %></p>
        <p class="text-neutral-600"><%= order.city %>, <%= order.state %> <%= order.zip %></p>
      </div>
    </div>

    <!-- Items -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6 mb-8">
      <h2 class="font-medium mb-4">Items</h2>
      <% const items = typeof order.items === 'string' ? JSON.parse(order.items) : order.items; %>
      <% if (items && items.length > 0) { %>
        <div class="divide-y divide-neutral-100">
          <% items.forEach(item => { %>
            <div class="flex items-center gap-4 py-4 first:pt-0 last:pb-0">
              <div class="w-16 h-16 rounded-lg overflow-hidden bg-neutral-100 flex-shrink-0">
                <% if (item.photo) { %>
                  <img src="<%= item.photo %>" alt="<%= item.name %>" class="w-full h-full object-cover">
                <% } %>
              </div>
              <div class="flex-1">
                <p class="font-medium"><%= item.name %></p>
                <p class="text-neutral-500 text-sm">Qty: <%= item.quantity %></p>
              </div>
              <div class="text-right">
                <p class="font-medium">$<%= ((item.price * item.quantity) / 100).toFixed(2) %></p>
                <p class="text-neutral-500 text-sm">$<%= (item.price / 100).toFixed(2) %> each</p>
              </div>
            </div>
          <% }) %>
        </div>
        <div class="border-t border-neutral-200 mt-4 pt-4 flex justify-between items-center">
          <span class="font-medium">Total</span>
          <span class="text-xl font-medium">$<%= (order.total / 100).toFixed(2) %></span>
        </div>
      <% } else { %>
        <p class="text-neutral-500">No items found</p>
      <% } %>
    </div>

    <!-- Update Status -->
    <div class="bg-white rounded-xl border border-neutral-200 p-6">
      <h2 class="font-medium mb-4">Update Status</h2>
      <form method="POST" action="/admin/orders/<%= order.id %>/status" class="flex gap-4">
        <select name="status" class="flex-1 bg-neutral-50 border border-neutral-200 rounded-lg px-4 py-2.5 text-sm">
          <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
          <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
          <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
          <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
        </select>
        <button type="submit" class="bg-emerald-600 text-white px-6 py-2.5 rounded-lg text-sm font-medium hover:bg-emerald-700 transition">Update</button>
      </form>
    </div>
  </main>
</body>
</html>
