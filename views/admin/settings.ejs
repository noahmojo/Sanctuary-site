<%- include('../partials/admin-header') %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-light mb-8">Site Settings</h1>
  
  <form method="POST" action="/admin/settings" enctype="multipart/form-data" class="bg-white rounded-xl p-6 space-y-5">
    <div>
      <label class="block text-sm font-medium mb-1.5">Site Name</label>
      <input type="text" name="siteName" value="<%= settings.siteName %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Homepage Header</label>
      <input type="text" name="header" value="<%= settings.header || settings.siteName %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Homepage Subheader</label>
      <input type="text" name="subheader" value="<%= settings.subheader || settings.tagline %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Tagline</label>
      <input type="text" name="tagline" value="<%= settings.tagline %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
      <p class="text-xs text-neutral-400 mt-1">Used in footer and meta description</p>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Location</label>
      <input type="text" name="location" value="<%= settings.location %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Hero Image</label>
      <% if (settings.heroImage) { %>
        <div class="mb-3">
          <img src="<%= settings.heroImage %>" class="w-full h-32 object-cover rounded-lg">
          <input type="hidden" name="existingHeroImage" value="<%= settings.heroImage %>">
        </div>
      <% } %>
      <input type="file" name="heroImage" accept="image/*" class="w-full text-sm text-neutral-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-emerald-50 file:text-emerald-700">
      <p class="text-xs text-neutral-400 mt-1">Recommended: Wide landscape image (1920x1080 or similar)</p>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Short About (for previews)</label>
      <textarea name="about" rows="2" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm resize-none"><%= settings.about %></textarea>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">About Page Content</label>
      <textarea name="aboutContent" rows="8" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm resize-none"><%= settings.aboutContent || settings.about %></textarea>
      <p class="text-xs text-neutral-400 mt-1">Full content shown on the About Us page. Use blank lines for paragraphs.</p>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Donation URL</label>
      <input type="url" name="donateUrl" value="<%= settings.donateUrl %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm" placeholder="https://...">
    </div>
    
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium mb-1.5">Email</label>
        <input type="email" name="email" value="<%= settings.email %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
      </div>
      <div>
        <label class="block text-sm font-medium mb-1.5">Phone</label>
        <input type="tel" name="phone" value="<%= settings.phone %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
      </div>
    </div>
    
    <div class="pt-4 border-t">
      <button type="submit" class="bg-emerald-600 text-white px-6 py-2.5 rounded-lg text-sm hover:bg-emerald-700 transition">Save Settings</button>
    </div>
  </form>
</div>

<%- include('../partials/admin-footer') %>
