<%- include('../partials/admin-header', { settings }) %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-light text-stone-800 mb-8">Site Settings</h1>
  
  <form method="POST" action="/admin/settings" class="bg-white rounded-xl p-8 shadow-sm">
    <div class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Site Name</label>
        <input type="text" name="siteName" value="<%= settings.siteName %>" class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Tagline</label>
        <input type="text" name="tagline" value="<%= settings.tagline %>" class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">About Text</label>
        <textarea name="about" rows="4" class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none resize-none"><%= settings.about %></textarea>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Donation URL</label>
        <input type="url" name="donateUrl" value="<%= settings.donateUrl %>" placeholder="https://..." class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
        <p class="text-sm text-stone-400 mt-1">Link to Stripe, PayPal, or your donation page</p>
      </div>
    </div>

    <div class="flex justify-end mt-8 pt-6 border-t border-stone-100">
      <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-xl font-medium transition">Save Settings</button>
    </div>
  </form>
</div>

<%- include('../partials/admin-footer') %>
