<%- include('../partials/admin-header') %>

<div class="flex justify-between items-center mb-8">
  <h1 class="text-3xl font-light text-stone-800">Animals</h1>
  <a href="/admin/animals/new" class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-xl font-medium transition">+ Add Animal</a>
</div>

<% if (animals.length === 0) { %>
  <div class="bg-white rounded-xl p-12 text-center">
    <div class="text-6xl mb-4">ðŸ¦™</div>
    <p class="text-stone-500 text-lg mb-4">No animals yet.</p>
    <a href="/admin/animals/new" class="inline-block bg-emerald-600 text-white px-6 py-3 rounded-xl hover:bg-emerald-700 transition">Add Your First Animal</a>
  </div>
<% } else { %>
  <div class="grid gap-4">
    <% animals.forEach(animal => { %>
      <div class="bg-white rounded-xl p-5 shadow-sm hover:shadow-md transition flex gap-5 items-center">
        <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-amber-100 to-amber-200 flex items-center justify-center text-3xl overflow-hidden flex-shrink-0">
          <% if (animal.photos && animal.photos.length > 0) { %>
            <img src="<%= animal.photos[0] %>" class="w-full h-full object-cover" alt="">
          <% } else { %>
            ðŸ¦™
          <% } %>
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-1">
            <h3 class="text-lg font-semibold text-stone-800"><%= animal.name %></h3>
            <% if (animal.featured) { %><span class="bg-amber-100 text-amber-700 text-xs px-2 py-0.5 rounded-full">Featured</span><% } %>
            <% if (animal.photos && animal.photos.length > 0) { %><span class="text-stone-400 text-xs"><%= animal.photos.length %> photo<%= animal.photos.length > 1 ? 's' : '' %></span><% } %>
          </div>
          <p class="text-stone-500 text-sm"><%= animal.species %> Â· <%= animal.breed %> Â· <%= calcAge(animal.birthday) %></p>
          <p class="text-stone-600 text-sm mt-1"><%= animal.personality %></p>
        </div>
        <div class="flex gap-3">
          <a href="/admin/animals/<%= animal.id %>/edit" class="text-emerald-600 hover:text-emerald-700 font-medium">Edit</a>
          <form method="POST" action="/admin/animals/<%= animal.id %>/delete" onsubmit="return confirm('Delete <%= animal.name %>?')" class="inline">
            <button type="submit" class="text-red-500 hover:text-red-600 font-medium">Delete</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>

<%- include('../partials/admin-footer') %>
