<%- include('../partials/admin-header') %>

<div class="flex justify-between items-center mb-8">
  <h1 class="text-2xl font-light">Animals</h1>
  <a href="/admin/animals/new" class="bg-emerald-600 text-white px-5 py-2.5 rounded-lg text-sm hover:bg-emerald-700 transition">+ Add Animal</a>
</div>

<div class="grid gap-3">
  <% animals.forEach(animal => { %>
    <div class="bg-white rounded-xl p-4 flex gap-4 items-center">
      <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-amber-50 to-emerald-50 overflow-hidden flex items-center justify-center">
        <% if (animal.photos && animal.photos.length > 0) { %>
          <img src="<%= animal.photos[0] %>" class="w-full h-full object-cover">
        <% } else { %>
          <span class="text-2xl"><%= animal.species === 'Alpaca' ? 'ðŸ¦™' : 'ðŸ‘' %></span>
        <% } %>
      </div>
      <div class="flex-1">
        <div class="flex items-center gap-2">
          <h3 class="font-medium"><%= animal.name %></h3>
          <% if (animal.featured) { %><span class="bg-amber-50 text-amber-600 text-xs px-2 py-0.5 rounded">Featured</span><% } %>
        </div>
        <p class="text-neutral-400 text-sm"><%= animal.breed %> Â· <%= calcAge(animal.birthday) %></p>
      </div>
      <div class="flex gap-2">
        <a href="/admin/animals/<%= animal.id %>/edit" class="text-emerald-600 text-sm hover:underline">Edit</a>
        <form method="POST" action="/admin/animals/<%= animal.id %>/delete" onsubmit="return confirm('Delete?')"><button class="text-red-500 text-sm hover:underline">Delete</button></form>
      </div>
    </div>
  <% }); %>
</div>

<%- include('../partials/admin-footer') %>
