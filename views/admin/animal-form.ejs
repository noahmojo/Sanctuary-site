<%- include('../partials/admin-header') %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-light mb-8"><%= animal ? 'Edit' : 'Add' %> Animal</h1>
  
  <form method="POST" action="<%= animal ? '/admin/animals/' + animal.id : '/admin/animals' %>" enctype="multipart/form-data" class="bg-white rounded-xl p-6 space-y-5">
    <div>
      <label class="block text-sm font-medium mb-1.5">Name *</label>
      <input type="text" name="name" value="<%= animal?.name || '' %>" required class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Nickname</label>
      <input type="text" name="nickname" value="<%= animal?.nickname || '' %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm" placeholder="Optional">
    </div>
    
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium mb-1.5">Species</label>
        <input type="text" name="species" value="<%= animal?.species || '' %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm" placeholder="Alpaca, Sheep...">
      </div>
      <div>
        <label class="block text-sm font-medium mb-1.5">Breed</label>
        <input type="text" name="breed" value="<%= animal?.breed || '' %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm" placeholder="Huacaya, Dorper...">
      </div>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Birthday</label>
      <input type="date" name="birthday" value="<%= animal?.birthday || '' %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm">
      <% if (animal?.birthday) { %><p class="text-xs text-emerald-600 mt-1">Age: <%= calcAge(animal.birthday) %></p><% } %>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Personality (short tagline)</label>
      <input type="text" name="personality" value="<%= animal?.personality || '' %>" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm" placeholder="Gentle and curious...">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Description</label>
      <textarea name="description" rows="3" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm resize-none"><%= animal?.description || '' %></textarea>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Chat Personality (for AI chat)</label>
      <textarea name="chatPersonality" rows="2" class="w-full bg-neutral-50 border-0 rounded-lg px-4 py-2.5 text-sm resize-none" placeholder="Describe how they talk - e.g. shy, excitable, wise, uses lots of exclamation marks..."><%= animal?.chatPersonality || '' %></textarea>
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1.5">Photos</label>
      <% if (animal?.photos && animal.photos.length > 0) { %>
        <div class="grid grid-cols-4 gap-2 mb-3">
          <% animal.photos.forEach(p => { %>
            <div class="relative"><img src="<%= p %>" class="w-full h-16 object-cover rounded-lg"><input type="hidden" name="existingPhotos" value="<%= p %>"></div>
          <% }); %>
        </div>
      <% } %>
      <input type="file" name="photos" accept="image/*" multiple class="w-full text-sm text-neutral-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-emerald-50 file:text-emerald-700">
    </div>
    
    <div class="flex items-center gap-2">
      <input type="checkbox" name="featured" id="featured" <%= animal?.featured ? 'checked' : '' %> class="rounded">
      <label for="featured" class="text-sm">Feature on homepage</label>
    </div>
    
    <div class="flex justify-between pt-4 border-t">
      <a href="/admin/animals" class="text-neutral-400 text-sm hover:text-neutral-600">Cancel</a>
      <button type="submit" class="bg-emerald-600 text-white px-6 py-2.5 rounded-lg text-sm hover:bg-emerald-700 transition"><%= animal ? 'Update' : 'Create' %></button>
    </div>
  </form>
</div>

<%- include('../partials/admin-footer') %>
