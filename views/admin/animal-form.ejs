<%- include('../partials/admin-header') %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-light text-stone-800 mb-8"><%= animal ? 'Edit' : 'Add' %> Animal</h1>
  
  <form method="POST" action="<%= animal ? '/admin/animals/' + animal.id : '/admin/animals' %>" enctype="multipart/form-data" class="bg-white rounded-xl p-8 shadow-sm">
    <div class="space-y-6">
      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Name *</label>
        <input type="text" name="name" value="<%= animal?.name || '' %>" required class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-stone-700 mb-2">Species</label>
          <input type="text" name="species" value="<%= animal?.species || '' %>" placeholder="Alpaca, Sheep..." class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-stone-700 mb-2">Breed</label>
          <input type="text" name="breed" value="<%= animal?.breed || '' %>" placeholder="Huacaya, Dorper..." class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Birthday</label>
        <input type="date" name="birthday" value="<%= animal?.birthday || '' %>" class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
        <% if (animal?.birthday) { %>
          <p class="text-sm text-emerald-600 mt-1">Current age: <%= calcAge(animal.birthday) %></p>
        <% } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Personality (short tagline)</label>
        <input type="text" name="personality" value="<%= animal?.personality || '' %>" placeholder="Gentle and curious..." class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none">
      </div>

      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Description</label>
        <textarea name="description" rows="4" placeholder="Tell their story..." class="w-full px-4 py-3 rounded-xl border border-stone-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none resize-none"><%= animal?.description || '' %></textarea>
      </div>

      <div>
        <label class="block text-sm font-medium text-stone-700 mb-2">Photos</label>
        
        <% if (animal?.photos && animal.photos.length > 0) { %>
          <div class="grid grid-cols-4 gap-3 mb-4">
            <% animal.photos.forEach((photo, i) => { %>
              <div class="relative">
                <img src="<%= photo %>" alt="" class="w-full h-24 object-cover rounded-lg">
                <input type="hidden" name="existingPhotos" value="<%= photo %>">
                <span class="absolute bottom-1 left-1 bg-black/50 text-white text-xs px-2 py-0.5 rounded"><%= i === 0 ? 'Main' : i + 1 %></span>
              </div>
            <% }); %>
          </div>
        <% } %>
        
        <div class="border-2 border-dashed border-stone-300 rounded-xl p-8 text-center hover:border-emerald-400 transition">
          <input type="file" name="photos" accept="image/*" multiple class="block w-full text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-emerald-50 file:text-emerald-700 hover:file:bg-emerald-100 cursor-pointer">
          <p class="text-stone-400 text-sm mt-2">Upload multiple photos (JPG, PNG)</p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <input type="checkbox" name="featured" id="featured" <%= animal?.featured ? 'checked' : '' %> class="w-5 h-5 rounded border-stone-300 text-emerald-600 focus:ring-emerald-500">
        <label for="featured" class="text-stone-700">Feature on homepage</label>
      </div>
    </div>

    <div class="flex justify-between mt-8 pt-6 border-t border-stone-100">
      <a href="/admin/animals" class="px-6 py-3 text-stone-600 hover:text-stone-800">Cancel</a>
      <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-xl font-medium transition"><%= animal ? 'Update' : 'Create' %> Animal</button>
    </div>
  </form>
</div>

<%- include('../partials/admin-footer') %>
