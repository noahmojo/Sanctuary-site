<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Orders - Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>* { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-neutral-50">
  <nav class="bg-white border-b border-neutral-200 px-6 py-4">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/admin" class="font-medium">ðŸ¦™ Sanctuary Admin</a>
      <div class="flex gap-6 text-sm">
        <a href="/admin/animals" class="text-neutral-600 hover:text-neutral-900">Animals</a>
        <a href="/admin/products" class="text-neutral-600 hover:text-neutral-900">Products</a>
        <a href="/admin/orders" class="text-neutral-900 font-medium">Orders</a>
        <a href="/admin/bookings" class="text-neutral-600 hover:text-neutral-900">Bookings</a>
        <a href="/admin/subscribers" class="text-neutral-600 hover:text-neutral-900">Subscribers</a>
        <a href="/admin/settings" class="text-neutral-600 hover:text-neutral-900">Settings</a>
        <a href="/admin/logout" class="text-neutral-600 hover:text-neutral-900">Logout</a>
      </div>
    </div>
  </nav>

  <main class="max-w-6xl mx-auto px-6 py-10">
    <h1 class="text-2xl font-light mb-8">Orders</h1>

    <% if (orders.length === 0) { %>
      <div class="bg-white rounded-xl border border-neutral-200 p-12 text-center">
        <p class="text-4xl mb-4">ðŸ“¦</p>
        <p class="text-neutral-500">No orders yet</p>
      </div>
    <% } else { %>
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <table class="w-full">
          <thead class="bg-neutral-50 border-b border-neutral-200">
            <tr>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Order</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Customer</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Items</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Total</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Status</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Date</th>
              <th class="text-right px-6 py-3 text-sm font-medium text-neutral-600">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-100">
            <% orders.forEach(order => { %>
              <% const items = typeof order.items === 'string' ? JSON.parse(order.items) : order.items; %>
              <tr class="hover:bg-neutral-50">
                <td class="px-6 py-4">
                  <span class="font-mono text-sm">#<%= order.id.slice(0, 8).toUpperCase() %></span>
                </td>
                <td class="px-6 py-4">
                  <p class="font-medium text-sm"><%= order.name %></p>
                  <p class="text-xs text-neutral-500"><%= order.email %></p>
                </td>
                <td class="px-6 py-4 text-sm text-neutral-600">
                  <%= items ? items.length : 0 %> item<%= items && items.length !== 1 ? 's' : '' %>
                </td>
                <td class="px-6 py-4 font-medium">$<%= (order.total / 100).toFixed(2) %></td>
                <td class="px-6 py-4">
                  <% if (order.status === 'pending') { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-amber-50 text-amber-600">Pending</span>
                  <% } else if (order.status === 'shipped') { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-blue-50 text-blue-600">Shipped</span>
                  <% } else if (order.status === 'delivered') { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-emerald-50 text-emerald-600">Delivered</span>
                  <% } else if (order.status === 'cancelled') { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-red-50 text-red-600">Cancelled</span>
                  <% } else { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-neutral-100 text-neutral-600"><%= order.status %></span>
                  <% } %>
                </td>
                <td class="px-6 py-4 text-sm text-neutral-500">
                  <%= new Date(order.createdAt).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4 text-right">
                  <a href="/admin/orders/<%= order.id %>" class="text-emerald-600 hover:text-emerald-700 text-sm font-medium">View</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>
</body>
</html>
