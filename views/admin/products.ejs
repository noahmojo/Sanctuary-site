<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products - Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>* { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-neutral-50">
  <nav class="bg-white border-b border-neutral-200 px-6 py-4">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/admin" class="font-medium">ðŸ¦™ Sanctuary Admin</a>
      <div class="flex gap-6 text-sm">
        <a href="/admin/animals" class="text-neutral-600 hover:text-neutral-900">Animals</a>
        <a href="/admin/products" class="text-neutral-900 font-medium">Products</a>
        <a href="/admin/orders" class="text-neutral-600 hover:text-neutral-900">Orders</a>
        <a href="/admin/bookings" class="text-neutral-600 hover:text-neutral-900">Bookings</a>
        <a href="/admin/subscribers" class="text-neutral-600 hover:text-neutral-900">Subscribers</a>
        <a href="/admin/settings" class="text-neutral-600 hover:text-neutral-900">Settings</a>
        <a href="/admin/logout" class="text-neutral-600 hover:text-neutral-900">Logout</a>
      </div>
    </div>
  </nav>

  <main class="max-w-6xl mx-auto px-6 py-10">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-2xl font-light">Products</h1>
      <a href="/admin/products/new" class="bg-emerald-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-emerald-700 transition">+ Add Product</a>
    </div>

    <% if (products.length === 0) { %>
      <div class="bg-white rounded-xl border border-neutral-200 p-12 text-center">
        <p class="text-4xl mb-4">ðŸ“¦</p>
        <p class="text-neutral-500 mb-4">No products yet</p>
        <a href="/admin/products/new" class="text-emerald-600 hover:text-emerald-700 font-medium">Add your first product</a>
      </div>
    <% } else { %>
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <table class="w-full">
          <thead class="bg-neutral-50 border-b border-neutral-200">
            <tr>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Product</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Category</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Price</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Inventory</th>
              <th class="text-left px-6 py-3 text-sm font-medium text-neutral-600">Status</th>
              <th class="text-right px-6 py-3 text-sm font-medium text-neutral-600">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-100">
            <% products.forEach(product => { %>
              <tr class="hover:bg-neutral-50">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-lg overflow-hidden bg-neutral-100 flex-shrink-0">
                      <% if (product.photos && product.photos.length > 0) { %>
                        <img src="<%= product.photos[0] %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                      <% } %>
                    </div>
                    <span class="font-medium"><%= product.name %></span>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-neutral-500"><%= product.category || '-' %></td>
                <td class="px-6 py-4 text-sm">$<%= (product.price / 100).toFixed(2) %></td>
                <td class="px-6 py-4 text-sm">
                  <% if (product.inventory === null) { %>
                    <span class="text-neutral-500">Unlimited</span>
                  <% } else if (product.inventory === 0) { %>
                    <span class="text-red-500">Out of stock</span>
                  <% } else if (product.inventory <= 5) { %>
                    <span class="text-amber-500"><%= product.inventory %> left</span>
                  <% } else { %>
                    <span><%= product.inventory %></span>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <% if (product.active) { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-emerald-50 text-emerald-600">Active</span>
                  <% } else { %>
                    <span class="inline-block px-2 py-1 rounded-full text-xs bg-neutral-100 text-neutral-500">Draft</span>
                  <% } %>
                </td>
                <td class="px-6 py-4 text-right">
                  <a href="/admin/products/<%= product.id %>/edit" class="text-emerald-600 hover:text-emerald-700 text-sm font-medium mr-4">Edit</a>
                  <form method="POST" action="/admin/products/<%= product.id %>/delete" class="inline" onsubmit="return confirm('Delete this product?')">
                    <button type="submit" class="text-red-500 hover:text-red-700 text-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>
</body>
</html>
