<%- include('../partials/admin-header') %>

<h1 class="text-2xl font-light mb-8">Dashboard</h1>

<div class="grid md:grid-cols-4 gap-4 mb-8">
  <div class="bg-white rounded-xl p-6"><p class="text-3xl font-light"><%= animals.length %></p><p class="text-neutral-400 text-sm">Animals</p></div>
  <div class="bg-white rounded-xl p-6"><p class="text-3xl font-light"><%= animals.filter(a => a.featured).length %></p><p class="text-neutral-400 text-sm">Featured</p></div>
  <div class="bg-white rounded-xl p-6"><p class="text-3xl font-light"><%= bookings.filter(b => b.status === 'pending').length %></p><p class="text-neutral-400 text-sm">Pending Bookings</p></div>
  <div class="bg-white rounded-xl p-6"><p class="text-3xl font-light"><%= animals.reduce((s,a) => s + (a.photos?.length || 0), 0) %></p><p class="text-neutral-400 text-sm">Photos</p></div>
</div>

<div class="grid md:grid-cols-2 gap-6">
  <div class="bg-white rounded-xl p-6">
    <h2 class="font-medium mb-4">Quick Actions</h2>
    <div class="space-y-2">
      <a href="/admin/animals/new" class="block bg-emerald-50 text-emerald-700 p-4 rounded-lg hover:bg-emerald-100 transition">+ Add Animal</a>
      <a href="/admin/bookings" class="block bg-neutral-50 text-neutral-700 p-4 rounded-lg hover:bg-neutral-100 transition">View Bookings</a>
    </div>
  </div>
  <div class="bg-white rounded-xl p-6">
    <h2 class="font-medium mb-4">Recent Bookings</h2>
    <% if (bookings.length === 0) { %>
      <p class="text-neutral-400 text-sm">No bookings yet</p>
    <% } else { %>
      <ul class="space-y-2">
        <% bookings.slice(-3).reverse().forEach(b => { %>
          <li class="flex justify-between text-sm p-2 bg-neutral-50 rounded"><span><%= b.organization %></span><span class="text-neutral-400"><%= b.status %></span></li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</div>

<%- include('../partials/admin-footer') %>
