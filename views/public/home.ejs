<%- include('../partials/header', { settings }) %>

<section class="bg-gradient-to-br from-sage-700 via-sage-800 to-sage-900 text-white py-24">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h1 class="text-5xl font-light mb-4"><%= settings.siteName %></h1>
    <p class="text-xl text-sage-200 mb-10"><%= settings.tagline %></p>
    <div class="flex justify-center gap-4">
      <a href="/animals" class="bg-white text-sage-800 px-8 py-3 rounded-xl font-medium hover:bg-sand-100 transition">Meet Our Animals</a>
      <a href="/donate" class="bg-amber-500 px-8 py-3 rounded-xl font-medium hover:bg-amber-600 transition">Support Us</a>
    </div>
  </div>
</section>

<section class="max-w-4xl mx-auto px-6 py-16 text-center">
  <h2 class="text-3xl font-light text-sage-800 mb-6">About Us</h2>
  <p class="text-lg text-sage-600 leading-relaxed"><%= settings.about %></p>
</section>

<% const featured = animals.filter(a => a.featured); %>
<% if (featured.length > 0) { %>
<section class="max-w-6xl mx-auto px-6 py-16">
  <h2 class="text-3xl font-light text-sage-800 mb-10 text-center">Meet Our Residents</h2>
  <div class="grid md:grid-cols-3 gap-8">
    <% featured.forEach(animal => { %>
      <a href="/animal/<%= animal.id %>" class="group">
        <div class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition">
          <% if (animal.photos && animal.photos.length > 0) { %>
            <img src="<%= animal.photos[0] %>" alt="<%= animal.name %>" class="w-full h-56 object-cover group-hover:scale-105 transition duration-300">
          <% } else { %>
            <div class="w-full h-56 bg-gradient-to-br from-sand-100 to-sand-200 flex items-center justify-center text-6xl">ðŸ¦™</div>
          <% } %>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-sage-800"><%= animal.name %></h3>
            <p class="text-sage-500"><%= animal.breed %> â€¢ <%= calcAge(animal.birthday) %></p>
            <p class="text-sage-600 mt-2"><%= animal.personality %></p>
          </div>
        </div>
      </a>
    <% }); %>
  </div>
  <div class="text-center mt-10">
    <a href="/animals" class="inline-block bg-sage-600 text-white px-8 py-3 rounded-xl font-medium hover:bg-sage-700 transition">View All Animals</a>
  </div>
</section>
<% } %>

<section class="bg-sage-800 text-white py-16">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-light mb-4">Help Us Care for Our Animals</h2>
    <p class="text-sage-200 mb-8">Every donation provides food, shelter, and veterinary care for our residents.</p>
    <a href="/donate" class="inline-block bg-amber-500 px-10 py-4 rounded-xl text-xl font-medium hover:bg-amber-600 transition">Donate Now</a>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
