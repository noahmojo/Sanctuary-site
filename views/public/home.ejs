<%- include('../partials/header', { settings }) %>

<!-- Hero -->
<section class="min-h-[85vh] flex items-center">
  <div class="max-w-6xl mx-auto px-6 w-full">
    <div class="max-w-2xl fade-up">
      <p class="text-sm text-neutral-400 mb-4 tracking-wide uppercase"><%= settings.location %></p>
      <h1 class="text-5xl md:text-6xl font-light leading-tight mb-6 tracking-tight"><%= settings.siteName %></h1>
      <p class="text-xl text-neutral-500 leading-relaxed mb-10"><%= settings.tagline %>. Home to <%= animals.length %> alpacas and sheep, each with their own story.</p>
      <div class="flex gap-4">
        <a href="/animals" class="bg-neutral-900 text-white px-8 py-4 rounded-full text-sm font-medium hover:bg-neutral-800 transition">Meet the Animals</a>
        <a href="/book" class="border border-neutral-200 px-8 py-4 rounded-full text-sm font-medium hover:border-neutral-400 transition">Book a Visit</a>
      </div>
    </div>
  </div>
</section>

<!-- Stats -->
<section class="py-20 border-y border-neutral-100">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div>
        <p class="text-4xl font-light mb-1"><%= animals.length %></p>
        <p class="text-neutral-400 text-sm">Animals</p>
      </div>
      <div>
        <p class="text-4xl font-light mb-1"><%= animals.filter(a => a.species === 'Alpaca').length %></p>
        <p class="text-neutral-400 text-sm">Alpacas</p>
      </div>
      <div>
        <p class="text-4xl font-light mb-1"><%= animals.filter(a => a.species === 'Sheep').length %></p>
        <p class="text-neutral-400 text-sm">Sheep</p>
      </div>
      <div>
        <p class="text-4xl font-light mb-1">‚àû</p>
        <p class="text-neutral-400 text-sm">Love</p>
      </div>
    </div>
  </div>
</section>

<!-- Featured -->
<section class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex justify-between items-end mb-12">
      <div>
        <h2 class="text-3xl font-light mb-2">Meet Our Residents</h2>
        <p class="text-neutral-500">Click to learn more, or start a conversation</p>
      </div>
      <a href="/animals" class="text-sm text-neutral-500 hover:text-neutral-900 transition hidden md:block">View all ‚Üí</a>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      <% animals.filter(a => a.featured).slice(0, 6).forEach(animal => { %>
        <div class="group hover-lift bg-white rounded-2xl overflow-hidden border border-neutral-100">
          <div class="aspect-[4/3] bg-neutral-100 overflow-hidden">
            <% if (animal.photos && animal.photos.length > 0) { %>
              <img src="<%= animal.photos[0] %>" alt="<%= animal.name %>" class="w-full h-full object-cover">
            <% } else { %>
              <div class="w-full h-full flex items-center justify-center text-6xl bg-gradient-to-br from-amber-50 to-emerald-50"><%= animal.species === 'Alpaca' ? 'ü¶ô' : 'üêë' %></div>
            <% } %>
          </div>
          <div class="p-5">
            <h3 class="font-medium text-lg mb-1"><%= animal.name %></h3>
            <p class="text-neutral-400 text-sm mb-3"><%= animal.breed %> ¬∑ <%= calcAge(animal.birthday) %></p>
            <p class="text-neutral-500 text-sm mb-4"><%= animal.personality %></p>
            <div class="flex gap-2">
              <a href="/animal/<%= animal.id %>" class="flex-1 text-center text-sm py-2 border border-neutral-200 rounded-full hover:border-neutral-400 transition">Profile</a>
              <a href="/chat/<%= animal.id %>" class="flex-1 text-center text-sm py-2 bg-emerald-600 text-white rounded-full hover:bg-emerald-700 transition">Chat</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- Book Visit CTA -->
<section class="py-24 bg-neutral-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-light mb-4">Bring the Joy to Your Community</h2>
      <p class="text-neutral-500 mb-8 leading-relaxed">We bring our friendly alpacas and sheep to schools, nursing homes, hospitals, and special events. Our animals love meeting new people.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <div class="flex items-center gap-3 text-neutral-600">
          <span class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm">üè´</span>
          <span class="text-sm">Schools</span>
        </div>
        <div class="flex items-center gap-3 text-neutral-600">
          <span class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm">üè•</span>
          <span class="text-sm">Nursing Homes</span>
        </div>
        <div class="flex items-center gap-3 text-neutral-600">
          <span class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm">üéâ</span>
          <span class="text-sm">Events</span>
        </div>
      </div>
      <a href="/book" class="inline-block bg-neutral-900 text-white px-10 py-4 rounded-full text-sm font-medium hover:bg-neutral-800 transition">Book a Visit</a>
    </div>
  </div>
</section>

<!-- Talk Feature -->
<section class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <span class="inline-block bg-emerald-50 text-emerald-700 px-4 py-1.5 rounded-full text-xs font-medium mb-4">New</span>
      <h2 class="text-3xl font-light mb-3">Talk to Our Animals</h2>
      <p class="text-neutral-500">Can't visit? Chat with our residents and get to know their personalities.</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% animals.slice(0, 4).forEach(animal => { %>
        <a href="/chat/<%= animal.id %>" class="group text-center p-6 rounded-2xl hover:bg-neutral-50 transition">
          <div class="w-16 h-16 mx-auto mb-3 rounded-full bg-gradient-to-br from-amber-50 to-emerald-50 flex items-center justify-center text-3xl overflow-hidden">
            <% if (animal.photos && animal.photos.length > 0) { %>
              <img src="<%= animal.photos[0] %>" class="w-full h-full object-cover">
            <% } else { %>
              <%= animal.species === 'Alpaca' ? 'ü¶ô' : 'üêë' %>
            <% } %>
          </div>
          <p class="font-medium text-sm"><%= animal.name %></p>
          <p class="text-xs text-neutral-400"><%= animal.species %></p>
        </a>
      <% }); %>
    </div>
  </div>
</section>

<!-- Donate -->
<section class="py-24 bg-neutral-900 text-white">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-light mb-4">Support Our Mission</h2>
    <p class="text-neutral-400 mb-8">Every donation goes directly to food, veterinary care, and shelter for our residents.</p>
    <a href="/donate" class="inline-block bg-white text-neutral-900 px-10 py-4 rounded-full text-sm font-medium hover:bg-neutral-100 transition">Donate</a>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
