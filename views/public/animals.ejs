<%- include('../partials/header', { settings, title: 'Animals' }) %>

<section class="py-16">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-light mb-3">Featured Animals</h1>
      <p class="text-neutral-500">Click on any animal to learn more or start a conversation</p>
    </div>
    
    <div class="flex justify-center gap-4 mb-10 flex-wrap">
      <a href="/animals" class="px-4 py-2 rounded-full text-sm <%= !currentSpecies ? 'bg-neutral-900 text-white' : 'bg-neutral-100 hover:bg-neutral-200' %> transition">All</a>
      <% speciesList.forEach(s => { %>
        <a href="/animals?species=<%= s %>" class="px-4 py-2 rounded-full text-sm <%= currentSpecies === s ? 'bg-neutral-900 text-white' : 'bg-neutral-100 hover:bg-neutral-200' %> transition"><%= s %></a>
      <% }); %>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      <% animals.forEach(animal => { %>
        <div class="group hover-lift bg-white rounded-2xl overflow-hidden border border-neutral-100">
          <div class="aspect-[4/3] bg-neutral-100 overflow-hidden">
            <% if (animal.photos && animal.photos.length > 0) { %>
              <img src="<%= animal.photos[0] %>" alt="<%= animal.name %>" class="w-full h-full object-cover">
            <% } else { %>
              <div class="w-full h-full flex items-center justify-center text-6xl bg-gradient-to-br from-amber-50 to-emerald-50"><%= animal.species === 'Alpaca' ? 'ðŸ¦™' : 'ðŸ‘' %></div>
            <% } %>
          </div>
          <div class="p-5">
            <h3 class="font-medium text-lg mb-1"><%= animal.name %></h3>
            <p class="text-neutral-400 text-sm mb-3"><%= animal.breed %> Â· <%= calcAge(animal.birthday) %></p>
            <p class="text-neutral-500 text-sm mb-4"><%= animal.personality %></p>
            <div class="flex gap-2">
              <a href="/animal/<%= animal.id %>" class="flex-1 text-center text-sm py-2 border border-neutral-200 rounded-full hover:border-neutral-400 transition">Profile</a>
              <a href="/chat/<%= animal.id %>" class="flex-1 text-center text-sm py-2 bg-emerald-600 text-white rounded-full hover:bg-emerald-700 transition">Chat</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
