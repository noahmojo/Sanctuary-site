<%- include('../partials/header', { settings, title: animal.name }) %>

<section class="py-12">
  <div class="max-w-4xl mx-auto px-6">
    <a href="/animals" class="inline-flex items-center gap-2 text-neutral-400 hover:text-neutral-600 text-sm mb-8">‚Üê Back</a>
    
    <div class="grid md:grid-cols-2 gap-10">
      <div class="aspect-square rounded-2xl overflow-hidden bg-neutral-100">
        <% if (animal.photos && animal.photos.length > 0) { %>
          <img src="<%= animal.photos[0] %>" alt="<%= animal.name %>" class="w-full h-full object-cover">
        <% } else { %>
          <div class="w-full h-full flex items-center justify-center text-8xl bg-gradient-to-br from-amber-50 to-emerald-50"><%= animal.species === 'Alpaca' ? 'ü¶ô' : 'üêë' %></div>
        <% } %>
      </div>
      
      <div>
        <% if (animal.featured) { %><span class="inline-block bg-amber-50 text-amber-700 px-3 py-1 rounded-full text-xs mb-4">Featured</span><% } %>
        <h1 class="text-4xl font-light mb-2"><%= animal.name %></h1>
        <% if (animal.nickname) { %><p class="text-neutral-400 mb-4">Also known as "<%= animal.nickname %>"</p><% } %>
        <p class="text-emerald-600 font-medium mb-6"><%= animal.personality %></p>
        
        <div class="grid grid-cols-3 gap-3 mb-6">
          <div class="bg-neutral-50 rounded-xl p-3 text-center">
            <p class="text-xs text-neutral-400 mb-1">Species</p>
            <p class="font-medium text-sm"><%= animal.species %></p>
          </div>
          <div class="bg-neutral-50 rounded-xl p-3 text-center">
            <p class="text-xs text-neutral-400 mb-1">Breed</p>
            <p class="font-medium text-sm"><%= animal.breed %></p>
          </div>
          <div class="bg-neutral-50 rounded-xl p-3 text-center">
            <p class="text-xs text-neutral-400 mb-1">Age</p>
            <p class="font-medium text-sm"><%= calcAge(animal.birthday) %></p>
          </div>
        </div>
        
        <p class="text-neutral-600 leading-relaxed mb-8"><%= animal.description %></p>
        
        <div class="flex gap-3">
          <a href="/chat/<%= animal.id %>" class="flex-1 text-center bg-emerald-600 text-white py-3 rounded-full text-sm font-medium hover:bg-emerald-700 transition">Chat with <%= animal.name %></a>
          <a href="/donate" class="border border-neutral-200 px-6 py-3 rounded-full text-sm hover:border-neutral-400 transition">Sponsor</a>
        </div>
      </div>
    </div>
    
    <% if (animal.photos && animal.photos.length > 1) { %>
      <div class="mt-12">
        <h2 class="text-lg font-medium mb-4">Gallery</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% animal.photos.forEach(p => { %>
            <img src="<%= p %>" class="aspect-square object-cover rounded-xl">
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
