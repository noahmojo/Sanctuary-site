<%- include('../partials/header', { settings, title: 'About Us' }) %>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-6">
    <h1 class="text-4xl font-light mb-8 text-center">About Us</h1>
    
    <div class="prose prose-neutral max-w-none">
      <p class="text-lg text-neutral-600 leading-relaxed mb-8" style="white-space: pre-line;"><%= settings.aboutContent || settings.about %></p>
    </div>
    
    <!-- Photo break -->
    <div class="my-12 rounded-2xl overflow-hidden bg-neutral-100 aspect-video flex items-center justify-center">
      <% if (settings.heroImage) { %>
        <img src="<%= settings.heroImage %>" alt="Sierra Alpaca Sanctuary" class="w-full h-full object-cover">
      <% } else { %>
        <p class="text-neutral-400">Photo coming soon</p>
      <% } %>
    </div>
    
    <!-- Mission -->
    <div class="bg-emerald-50 rounded-2xl p-8 mb-12">
      <h2 class="text-xl font-medium mb-4">Our Mission</h2>
      <p class="text-neutral-600 leading-relaxed">We provide a forever home for alpacas and sheep while creating gentle connections with our community. Our animals visit nursing homes and spend time with children, offering calm presence without demands or expectations.</p>
    </div>
    
    <!-- Location -->
    <div class="text-center">
      <h2 class="text-xl font-medium mb-3">Find Us</h2>
      <p class="text-neutral-500"><%= settings.location %></p>
      <p class="text-neutral-400 text-sm mt-2">In the Sierra Nevada foothills of El Dorado County</p>
    </div>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
