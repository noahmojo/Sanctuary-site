<%- include('../partials/header', { settings, title: 'About Us' }) %>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-light mb-4">About Us</h1>
      <p class="text-neutral-500"><%= settings.location %></p>
    </div>
    
    <div class="prose prose-neutral max-w-none mb-16">
      <p class="text-lg text-neutral-600 leading-relaxed whitespace-pre-line"><%= settings.aboutContent || settings.about %></p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <div class="text-center">
        <p class="text-4xl font-light text-emerald-600 mb-2"><%= animals.length + 50 %></p>
        <p class="text-neutral-500">Rescued Animals</p>
      </div>
      <div class="text-center">
        <p class="text-4xl font-light text-emerald-600 mb-2"><%= animals.filter(a => a.species === 'Alpaca').length + 10 %></p>
        <p class="text-neutral-500">Alpacas</p>
      </div>
      <div class="text-center">
        <p class="text-4xl font-light text-emerald-600 mb-2"><%= animals.filter(a => a.species === 'Sheep').length + 40 %></p>
        <p class="text-neutral-500">Sheep</p>
      </div>
    </div>
    
    <div class="bg-neutral-50 rounded-2xl p-8 mb-16">
      <h2 class="text-2xl font-light mb-4">Our Mission</h2>
      <p class="text-neutral-600 leading-relaxed mb-4">We rescue, rehabilitate, and provide a forever home for alpacas, sheep, and other barnyard animals in need. But our mission extends beyond our pastures.</p>
      <p class="text-neutral-600 leading-relaxed">Our animals visit nursing homes bringing comfort and joy to seniors, spend time with children with disabilities creating therapeutic connections, and help educate the community about these wonderful creatures.</p>
    </div>
    
    <% if (settings.email || settings.phone) { %>
    <div class="text-center">
      <h2 class="text-2xl font-light mb-6">Get in Touch</h2>
      <div class="flex justify-center gap-8">
        <% if (settings.email) { %>
          <a href="mailto:<%= settings.email %>" class="text-neutral-600 hover:text-emerald-600 transition">
            <span class="block text-2xl mb-1">âœ‰ï¸</span>
            <span class="text-sm"><%= settings.email %></span>
          </a>
        <% } %>
        <% if (settings.phone) { %>
          <a href="tel:<%= settings.phone %>" class="text-neutral-600 hover:text-emerald-600 transition">
            <span class="block text-2xl mb-1">ğŸ“</span>
            <span class="text-sm"><%= settings.phone %></span>
          </a>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</section>

<%- include('../partials/footer', { settings }) %>
